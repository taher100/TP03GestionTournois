@model IEnumerable<TP03GestionTournois.Models.Tournoi>

@{
  ViewData["Title"] = "Search";
}


@using (Html.BeginForm("Search", "Tournoi", FormMethod.Get))
{
  @Html.TextBox("searching")
  <input type="submit" value="Search" />
}

<br />

<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Nom)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Prix)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Description)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Date)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Jeu)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Theme)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Count() == 0)
    {
      <tr>
        <td colspan="3" style="color:red">
          No Match Any Document
        </td>
      </tr>
    }
    else
    {
      @foreach (var item in Model)
      {
        <tr>
          <td>
            @Html.DisplayFor(modelItem => item.Nom)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Prix)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Description)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Date)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Jeu)
          </td>
          <td>
            @Html.DisplayFor(modelItem => item.Theme)
          </td>
          <td>
            <a asp-action="Edit" asp-route-id="@item.IdTournoi">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.IdTournoi">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.IdTournoi">Delete</a>
          </td>
        </tr>
      }
    }
  </tbody>
</table>

<div>
  <a asp-action="Index">Back to List</a>
</div>
